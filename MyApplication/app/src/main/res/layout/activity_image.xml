<?xml version="1.0" encoding="utf-8"?>
    <ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

        <ImageView
            android:id="@+id/tulips_image"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_margin="8dp"
            android:background="#CCC"
            android:src="@drawable/tulips"
            android:contentDescription="tulips"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/balcony_image" />

        <ImageView
            android:id="@+id/balcony_image"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:contentDescription="balcony"
            android:src="@drawable/balcony"
            android:scaleType="centerCrop"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/vase_image"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:contentDescription="vase"
            android:scaleType="fitEnd"
            android:src="@drawable/vase"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/text_content1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:gravity="center"
            android:padding="20dp"
            android:paddingLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:text="Tint Color Image"
            android:textSize="24dp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/tint_tulips_image"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_margin="8dp"
            android:background="#CCC"
            android:tint="@color/teal_200"
            android:tintMode="multiply"
            android:src="@drawable/tulips"
            android:contentDescription="tulips"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tint_balcony_image" />

        <ImageView
            android:id="@+id/tint_balcony_image"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:contentDescription="balcony"
            android:tint="@color/purple_200"
            android:tintMode="add"
            android:src="@drawable/balcony"
            android:scaleType="centerCrop"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/tint_vase_image"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:contentDescription="vase"
            android:scaleType="fitEnd"
            android:tint="@color/teal_200"
            android:tintMode="screen"
            android:src="@drawable/vase"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </LinearLayout>
    </ScrollView>

