<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/drawables_container"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            style="@style/DrawableTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/drawables_title"
            android:textStyle="bold" />

        <TextView
            style="@style/SubTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/plus_text"/>
        <TextView
            style="@style/SubTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/minus_text" />
        <TextView
            style="@style/SubTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/off_text" />

        <ImageView
            android:id="@+id/wifi_image"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/images"
            android:layout_gravity="center" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/add_button"
                style="@style/MyButtonStyle"
                android:background="@drawable/layer_button"
                android:src="@drawable/ic_baseline_add_24"
                />
            <ImageButton
                android:id="@+id/minus_button"
                style="@style/MyButtonStyle"
                android:background="@drawable/layer_button"
                android:src="@drawable/ic_baseline_remove_24"
                />
            <ImageButton
                android:id="@+id/off_button"
                style="@style/MyButtonStyle"
                android:background="@drawable/layer_button"
                android:src="@drawable/ic_baseline_signal_wifi_off_24"
                />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>