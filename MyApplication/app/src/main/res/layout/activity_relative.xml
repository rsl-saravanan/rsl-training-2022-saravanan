<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/institute_image"
        android:layout_width="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_height="150dp"
        android:contentDescription="institute image"
        android:scaleType="centerCrop"
        android:src="@drawable/institute" />

    <TextView
        android:id="@+id/center_text"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:gravity="center"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:text="@string/hogwarts"
        android:textColor="#d12162"
        android:textSize="@dimen/text_normal" />

    <ImageView
        android:id="@+id/avator"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="10dp"
        android:layout_below="@id/institute_image"
        android:layout_marginLeft="14dp"
        android:contentDescription="avator"
        android:src="@drawable/man" />

    <TextView
        android:id="@+id/name"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_below="@id/institute_image"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@id/avator"
        android:gravity="center"
        android:text="Albus Potter"
        android:textSize="@dimen/text_heading" />

    <EditText
        android:id="@+id/number"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_below="@id/avator"
        android:layout_marginStart="20dp"
        android:layout_marginTop="50dp"
        android:background="@color/white"
        android:gravity="center"
        android:hint="phone number"
        android:inputType="number"
        android:textSize="@dimen/text_normal" />

    <EditText
        android:id="@+id/dateofbirth"
        android:layout_width="200dp"
        android:layout_height="47dp"
        android:layout_below="@id/number"
        android:layout_marginStart="20dp"
        android:layout_marginTop="50dp"
        android:background="@color/white"
        android:gravity="center"
        android:hint="Date of Birth"
        android:inputType="date"
        android:textSize="@dimen/text_normal" />


    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/dateofbirth"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="50dp"
        android:background="@color/purple_500"
        android:padding="10dp"
        android:text="Cancel" />

    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/dateofbirth"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="50dp"
        android:layout_toEndOf="@id/avator"
        android:background="@color/purple_500"
        android:padding="10dp"
        android:text="Submit" />

</RelativeLayout>
